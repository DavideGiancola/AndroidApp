<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/customadapter_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITLE"/>

    <TextView
        android:id="@+id/customadapter_text_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBTITLE"/>

    <TextView
        android:id="@+id/customadapter_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESCRIPTION"/>

    <TextView
        android:id="@+id/customadapter_sub_description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBDESCRIPTION1"/>

    <TextView
        android:id="@+id/customadapter_sub_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBDESCRIPTION2"/>

</LinearLayout>