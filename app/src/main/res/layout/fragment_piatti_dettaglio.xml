<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/image_piatto_dettaglio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteY="100dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_card"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/nome_piatto"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"


        android:layout_marginTop="32dp"
        android:paddingLeft="@dimen/categoria_nome_padding"
        android:paddingRight="@dimen/categoria_nome_padding"
        android:paddingTop="2dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/categorie_title"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/image_piatto_dettaglio"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/descrizione_piatto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nome_piatto"
        android:layout_marginTop="8dp"
        android:text="nostrum exercitationem ullam corporis suscipit laboriosam,"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification"
        android:textColor="@color/categorie_title"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/nome_piatto"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/prezzo_piatto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/descrizione_piatto"

        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/categorie_title"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/descrizione_piatto"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>